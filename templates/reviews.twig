{% extends "base.twig" %}

{% block title %}Reviews - Board Game Reviews{% endblock %}

{% block content %}
<div class="container py-5">
    <h1 class="display-4 mb-4">Game Reviews</h1>

    {% if loggedin %}
    <div class="card mb-5">
        <div class="card-body">
            <h2 class="card-title h4 mb-4">Write a Review</h2>
            <form action="/reviews.php" method="POST">
                <div class="mb-3">
                    <label for="game_id" class="form-label">Select Game</label>
                    <select name="game_id" id="game_id" required class="form-select">
                        <option value="">Choose a game...</option>
                        {% for game in games %}
                        <option value="{{ game.id }}">{{ game.title }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <select name="rating" id="rating" required class="form-select">
                        <option value="">Select rating...</option>
                        <option value="5">5 - Excellent</option>
                        <option value="4">4 - Very Good</option>
                        <option value="3">3 - Good</option>
                        <option value="2">2 - Fair</option>
                        <option value="1">1 - Poor</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="review_text" class="form-label">Your Review</label>
                    <textarea name="review_text" id="review_text" rows="4" required class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Review</button>
            </form>
        </div>
    </div>
    {% endif %}

    <div class="row">
        {% for review in reviews %}
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h3 class="card-title h5 mb-1">
                                <a href="/games.php?id={{ review.game_id }}" class="text-decoration-none">
                                    {{ review.game_title }}
                                </a>
                            </h3>
                            <p class="text-muted small mb-0">By {{ review.user_name }} on {{ review.created_at|date('F j, Y') }}</p>
                        </div>
                        <div class="d-flex align-items-center">
                            {% for i in 1..5 %}
                            <i class="fas fa-star {% if i <= review.rating %}text-warning{% else %}text-muted{% endif %} me-1"></i>
                            {% endfor %}
                        </div>
                    </div>
                    <p class="card-text">{{ review.comment }}</p>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="text-center py-5">
                <p class="text-muted">No reviews yet. Be the first to write one!</p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% if redirect %}
<script>
    window.location.href = '/reviews.php';
</script>
{% endif %}
{% endblock %}