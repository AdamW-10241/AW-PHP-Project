{% extends "base.twig" %}

{% block title %}Community - Board Game Reviews{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="text-center mb-4">
            <h1 class="display-4 fw-bold text-primary mb-3">Community</h1>
            <p class="lead text-muted">Connect with fellow board game enthusiasts</p>
            <div class="d-flex justify-content-center">
                <div class="border-bottom border-primary" style="width: 100px;"></div>
            </div>
        </div>

        <div class="row">
            {% for user in users %}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-user-circle fa-4x text-primary"></i>
                        </div>
                        <h3 class="card-title h5">{{ user.username }}</h3>
                        <p class="text-muted small mb-2">Member since {{ user.created_at|date('F Y') }}</p>
                        <a href="/user_profile.php?id={{ user.id }}" class="btn btn-outline-primary">
                            View Profile
                        </a>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="col-12">
                <div class="text-center py-5">
                    <p class="text-muted">No users found.</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}