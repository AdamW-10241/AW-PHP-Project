{% extends "base.twig" %}

{% block title %}{{ user.username }}'s Profile - Board Game Reviews{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-user-circle fa-5x text-primary"></i>
                        </div>
                        <h1 class="card-title h3">{{ user.username }}</h1>
                        <p class="text-muted">Member since {{ user.created_at|date('F Y') }}</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title h4 mb-4">Favourite Games</h2>
                        {% if favorites %}
                            <div class="row">
                                {% for favorite in favorites %}
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h3 class="card-title h5">
                                                <a href="/detail.php?id={{ favorite.id }}" class="text-decoration-none">
                                                    {{ favorite.title }}
                                                </a>
                                            </h3>
                                            <a href="/detail.php?id={{ favorite.id }}" class="btn btn-sm btn-outline-primary">
                                                View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted">No favorite games yet.</p>
                        {% endif %}
                    </div>
                </div>

                {% if matchingFavorites and matchingFavorites|length > 0 %}
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title h4 mb-4">Matching Favourites</h2>
                        <p class="text-muted mb-4">You both love these games!</p>
                        <div class="row">
                            {% for game in matchingFavorites %}
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h3 class="card-title h5">
                                            <a href="/detail.php?id={{ game.id }}" class="text-decoration-none">
                                                {{ game.title }}
                                            </a>
                                        </h3>
                                        <a href="/detail.php?id={{ game.id }}" class="btn btn-sm btn-outline-primary">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %} 