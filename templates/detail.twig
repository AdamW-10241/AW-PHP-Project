<!doctype html>
<html lang="en">
{% include 'head.twig' %}
<body>
    {% include 'navigation.twig' %}
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-4">
                <img src="/assets/cover_images/{{detail.image}}" class="img-fluid">
            </div>
            <div class="col-md-8">
                <h2>{{detail.title}}</h2>
                <h5>{{detail.tagline}}</h5>
                <p class="card-text">Artists: {{detail.artists}}</p>
                <p class="card-text">Designers: {{detail.designers}}</p>
                <p class="card-text">Publishers: {{detail.publishers}}</p>
                <ul class="list-group w-50 p-3">
                    <li class="list-group-item">
                        <span class="text-uppercase">Year Published : </span>
                        {{detail.year}}
                    </li>
                    <li class="list-group-item">
                        <span class="text-uppercase">Player Range : </span>
                        {{detail.player_range}}
                    </li>
                    <li class="list-group-item">
                        <span class="text-uppercase">Age Range : </span>
                        {{detail.age_range}}
                    </li>
                    <li class="list-group-item">
                        <span class="text-uppercase">Playtime Range : </span>
                        {{detail.playtime_range}}
                    </li>                
                </ul>
                <h4>Description</h4>
                <p>{{detail.description}}</p>
                {% if loggedin == true %}
                <button class="btn btn-primary">Review this board game</button
                {% endif %}
            </div>
        </div>
    </div>
    {% include 'footer.twig' %}
</body>
</html>